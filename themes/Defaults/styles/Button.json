{
  ".button": {
    "width": 250,
    "height": 70,
    "touchEnabled": true,
    "text": "Button",
    "visibility": true,
    "style": {
      "backgroundColor": "#00A1F1",
      "opacity": 1,
      "borderColor": "rgba(0,0,0,1)",
      "borderWidth": 0,
      "color": "#FFFFFF",
      "textAlignment": "MIDCENTER",
      "font": {
        "size": 16,
        "bold": false,
        "color": "#FFFFFF",
        "italic": false
      }
    },
    "flexProps": {
      "positionType": "RELATIVE",
      "alignSelf": "AUTO"
    },
    "&-small": {
      "width": 100
    },
    "&-medium": {
      "width": 250
    },
    "&-large": {
      "width": 350
    },
    "&-warning": {
      "style": {
        "backgroundColor": "#9F6000"
      }
    },
    "&-error": {
      "style": {
        "backgroundColor": "#D8000C"
      }
    },
    "&-success": {
      "style": {
        "backgroundColor": "#4F8A10"
      }
    }
  }
}
